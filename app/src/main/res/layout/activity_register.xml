<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_undraw_game_day_ucx9" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:gravity="center"
                    android:text="Create Account"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/googlesans_medium"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="3dp"
                    android:text="Full Name"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/edt_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_assignment_ind_black_24dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:hint="example example"
                    />
                <TextView
                    android:fontFamily="@font/googlesans_medium"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="3dp"
                    android:text="User Name"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_assignment_ind_black_24dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:hint="example_123"
                    />

                <TextView
                    android:fontFamily="@font/googlesans_medium"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="3dp"
                    android:text="Email"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_email_black_24dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:hint="example@gmail.com"
                    android:textSize="17sp" />

                <TextView
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="3dp"
                    android:text="Phone Number"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_phone_android_black_24dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:hint="08121291***"
                    android:textSize="17sp" />
                <TextView
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="3dp"
                    android:text="Team Name"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/edt_teamName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_security_black_24dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:hint="GundarFc"
                    android:textSize="17sp" />


                <TextView
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="3dp"
                    android:text="Password"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_vpn_key_black_24dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:hint="example123"
                    android:inputType="textPassword" />

                <CheckBox
                    android:id="@+id/cb_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_button"
                    android:fontFamily="@font/googlesans_bold"
                    android:text="Register"
                    android:textColor="@color/white" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans_medium"
                android:text="Already have an account ? " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans_medium"
                android:text="Login"
                android:textColor="@color/bluePrimary" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>